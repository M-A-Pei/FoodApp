@{
    ViewData["title"] = "Register";
}

<div class="row d-flex w-100 justify-content-center">
    <div class="col-lg-6 p-3 border border-rounded">
        <h1>Register</h1>
        <form method="post" asp-controller="Auth" asp-action="Register" class="d-flex flex-column gap-2">
            <label>Name</label><input type="text" class="w-100" name="name"> 
            <label>Email</label><input type="text" class="w-100" name="email"> 
            <label>Password</label><input type="password" class="w-100" name="password">
            <button class="btn-success btn">Register</button>
        </form>
    </div>
</div>